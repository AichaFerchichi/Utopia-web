{% extends 'BackBundle:Default:index.html.twig' %}
{% block content %}
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-title">
                        <h4>Ajouter un moyen de transport</h4>
                        <hr>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide"  method="POST">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Type <span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username" name="type" placeholder="Type du moyen..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Immatriculation <span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-email" name="immatriculation" placeholder="Immatriculation du moyen">
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Nombre de place disponible <span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-number" name="nombre_de_place" >
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Ajouter</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>



    <!-- Form validation -->
    <script src="{{ asset('back/js/lib/form-validation/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('back/js/lib/form-validation/jquery.validate-init.js') }}"></script>
{% endblock %}