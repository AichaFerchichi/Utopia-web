{% extends 'BackBundle:Default:index.html.twig' %}
{% block content %}

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Mes Produits</h3> </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Gestion Produits</a></li>
                <li class="breadcrumb-item active">Mes produits</li>

            </ol>
        </div>
    </div>

    <div class="container-fluid">
    <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <p style="color : deeppink">Voulez-vous modifier le produit {{ e }} ? Veuillez remplir les champs suivants !</p>
                <hr>
            </div>
            <div class="card-body">
                {#
                {{ form(f) }}
                #}
                {{ form_start(f) }}

                <center><table>
                    <tr>
                        <td>Nom<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.nom) }}</td>
                    </tr>
                    <tr>
                        <td>Cat√©gorie<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.categorie,{ 'attr' : { 'class' : 'text-muted m-b-15 f-s-12 form-control input-focus' } }) }}</td>
                    </tr>
                    <tr>
                        <td>Prix<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.prixProduit) }}</td>
                    </tr>
                    <tr>
                        <td>Description<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.description) }}</td>
                    </tr>
                    <tr>
                        <td>Quantite<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.quantite) }}</td>
                    </tr>
                    <tr>
                        <td>Image<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.image) }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>{{ form_widget(f.Valider) }}</td>
                    </tr>
                </table></center>

                {{ form_end(f) }}




            </div>
        </div>
    </div>
    </div>
    </div>




{% endblock %}