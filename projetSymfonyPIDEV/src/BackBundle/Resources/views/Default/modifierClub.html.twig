{% extends 'BackBundle:Default:index.html.twig' %}
{% block content %}

    <div class="container-fluid">
    <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <p style="color : deeppink">Voulez-vous modifier le club  ? Veuillez remplir les champs suivants !</p>
                <hr>
            </div>
            <div class="card-body">
                {#
                {{ form(f) }}
                #}
                {{ form_start(f) }}
                <table>
                    <tr>
                        <td>Nom<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.nom_club) }}</td>
                    </tr>
                    <tr>
                        <td>Description<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.description) }}</td>
                    </tr>
                    <tr>
                        <td>CIN<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.cin_proprietaire) }}</td>
                    </tr>
                    <tr>
                        <td>Email<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.email) }}</td>
                    </tr>


                    <tr>
                        <td>Nombre Membre<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.nombre_membre) }}</td>
                    </tr>
                    <tr>
                        <td>Nombre Personnels<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.nombre_personnels) }}</td>
                    </tr>
                    <tr>
                        <td>Lieu<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.lieu) }}</td>
                    </tr>
                    <tr>
                        <td>Image<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.image) }}</td>
                    </tr>
                    <tr>
                        <td>Categorie<span class="text-danger">* </span></td>
                        <td>{{ form_widget(f.categorie) }}</td>
                    </tr>

                    <tr>
                        <td></td>
                        <td><center>{{ form_widget(f.Valider) }}</center></td>
                    </tr>
                </table>

                {{ form_end(f) }}




            </div>
        </div>
    </div>
    </div>
    </div>




{% endblock %}