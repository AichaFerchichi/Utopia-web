{% extends 'BackBundle:Default:index.html.twig' %}
{% block content %}
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">

                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <form action="{{ path('email_compose') }}" method="post">  <h4 class="card-title">Voulez-vous ajouter une nouvelle activité?  Veuillez remplir les informations nécessaires
                                        <button type="submit" class="btn btn-danger m-b-10 m-l-5">Annuler</button></h4></form>
                                        <div class="basic-elements"> {{ form_start(f) }}
                                            {{ form_widget(f) }}


                                            {{ form_end(f) }}

                                        </div>
                                    </div><a href="{{ path('ListeActivite',{'id':id}) }}" style="text-align: right;color: #007bff" >Liste des activités</a>
                                </div>

                            </div>
            {% if app.session.flashBag.has('danger') %}
                <div class="alert alert-danger">
                    {% for msg in app.session.flashBag.get('danger') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
                            <div class="clearfix"></div>


        </div>
        <!-- End PAge Content -->
    </div>
{% endblock %}
